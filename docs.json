{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Toine Scripts Docs",
  "colors": {
    "primary": "#811b1b",
    "light": "#811b1b",
    "dark": "#811b1b"
  },
  "favicon": "/images/TS.png",
  "navigation": {
    "global": {
      "anchors": [
        {
          "anchor": "Store",
          "icon": "shopping-cart",
          "href": "https://store.toine.me"
        }
      ]
    },
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index"
            ]
          },

          {
            "group": "Scripts",
            "pages": [
              "scripts/persistance/index"
            ]
          }
        ]
      }
    ]
  },
  "logo": {
    "light": "/images/ts_logo_large.svg",
    "dark": "/images/ts_logo_large.svg"
  },
  "navbar": {
    "primary": {
      "type": "button",
      "label": "Store",
      "href": "https://store.toine.me"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "website": "https://store.toine.me",
      "discord": "https://discord.gg/4dv9FB6g4G"
    }
  },
  "description": "You can find here all the infos about our scripts.",
  "background": {
    "decoration": "grid"
  },
  "appearance": {
    "strict": true,
    "default": "dark"
  },
  "fonts": {
    "family": "Montserrat"
  },
  "metadata": {
    "timestamp": true
  }
}
